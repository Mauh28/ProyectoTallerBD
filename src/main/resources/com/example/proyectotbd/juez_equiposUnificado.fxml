<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.proyectotbd.JuezEquiposUnificadoController"
            prefHeight="720.0" prefWidth="1280.0"
            style="-fx-background-color: #f4f6f8;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Button text="← Cambiar Evento"
                    onAction="#handleRegresar"
                    style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-font-size: 14; -fx-cursor: hand; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>

            <Label text="Evaluación de Equipos" textFill="WHITE">
                <font> <Font name="System Bold" size="24.0" /> </font>
                <HBox.margin> <Insets left="15.0" /> </HBox.margin>
            </Label>

            <Region HBox.hgrow="ALWAYS" />

            <Label text="Panel de Juez" textFill="#bdc3c7">
                <font> <Font size="16.0" /> </font>
            </Label>
        </HBox>
    </top>

    <center>
        <VBox spacing="20.0">
            <padding> <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" /> </padding>

            <VBox spacing="10.0">
                <Label text="Selecciona Categoría:" textFill="#7f8c8d" style="-fx-font-weight: bold;"/>
                <HBox spacing="15.0">
                    <Button text="PRIMARIA" onAction="#handleFiltroCategoria" prefWidth="180.0" prefHeight="40.0"
                            style="-fx-background-color: white; -fx-text-fill: #2980b9; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);"/>

                    <Button text="SECUNDARIA" onAction="#handleFiltroCategoria" prefWidth="180.0" prefHeight="40.0"
                            style="-fx-background-color: white; -fx-text-fill: #8e44ad; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);"/>

                    <Button text="PREPARATORIA" onAction="#handleFiltroCategoria" prefWidth="180.0" prefHeight="40.0"
                            style="-fx-background-color: white; -fx-text-fill: #d35400; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);"/>

                    <Button text="PROFESIONAL" onAction="#handleFiltroCategoria" prefWidth="180.0" prefHeight="40.0"
                            style="-fx-background-color: white; -fx-text-fill: #c0392b; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);"/>
                </HBox>

                <Label fx:id="lblCategoriaActual" text="Viendo: Ninguna seleccionada" textFill="#2c3e50">
                    <font> <Font size="16.0" /> </font>
                </Label>
            </VBox>

            <VBox spacing="10.0">
                <HBox alignment="CENTER_LEFT">
                    <Label text="Lista de Equipos" textFill="#2c3e50">
                        <font> <Font name="System Bold" size="20.0" /> </font>
                    </Label>
                    <Region HBox.hgrow="ALWAYS" />
                    <TextField promptText="Filtrar por nombre..." prefHeight="35.0" prefWidth="300.0" style="-fx-background-radius: 20; -fx-border-color: #bdc3c7; -fx-border-radius: 20; -fx-padding: 0 15;"/>
                </HBox>

                <HBox spacing="0.0" style="-fx-padding: 0 20 0 20; -fx-background-color: #e0e0e0; -fx-background-radius: 5;">
                    <Label text="EQUIPO" textFill="#555" prefWidth="400.0" style="-fx-font-weight: bold; -fx-padding: 10;"/>
                    <Label text="INSTITUCIÓN" textFill="#555" prefWidth="300.0" style="-fx-font-weight: bold; -fx-padding: 10;"/>
                    <Label text="ESTADO" textFill="#555" prefWidth="200.0" style="-fx-font-weight: bold; -fx-padding: 10;"/>
                    <Region HBox.hgrow="ALWAYS" />
                    <Label text="ACCIÓN" textFill="#555" style="-fx-font-weight: bold; -fx-padding: 10;"/>
                </HBox>
            </VBox>

            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
                <content>
                    <VBox fx:id="vboxListaEquipos" spacing="10.0" style="-fx-padding: 5;">
                        <Label text="Selecciona una categoría para ver los equipos." textFill="#95a5a6" style="-fx-padding: 20;"/>
                    </VBox>
                </content>
            </ScrollPane>

        </VBox>
    </center>
</BorderPane>