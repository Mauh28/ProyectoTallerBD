<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.proyectotbd.CoachCategoriaController"
            prefHeight="720.0" prefWidth="1280.0"
            style="-fx-background-color: #f4f6f8;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Button text="← Volver a Eventos"
                    onAction="#handleRegresar"
                    style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-font-size: 14; -fx-cursor: hand; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>

            <Label text="Inscripción de Equipo" textFill="WHITE">
                <font> <Font name="System Bold" size="24.0" /> </font>
                <HBox.margin> <Insets left="15.0" /> </HBox.margin>
            </Label>

            <Region HBox.hgrow="ALWAYS" />

            <Label text="Paso 2 de 4: Categoría" textFill="#bdc3c7">
                <font> <Font size="14.0" /> </font>
            </Label>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="50.0">

            <VBox alignment="CENTER" spacing="10.0">
                <Label text="Selecciona el Nivel" textFill="#2c3e50">
                    <font> <Font name="System Bold" size="32.0" /> </font>
                </Label>
                <Label text="¿A qué categoría pertenece el equipo que vas a registrar?" textFill="#7f8c8d">
                    <font> <Font size="18.0" /> </font>
                </Label>
            </VBox>

            <HBox alignment="CENTER" spacing="30.0">

                <Button text="PRIMARIA" onAction="#handleSeleccionCategoria"
                        prefHeight="250.0" prefWidth="240.0"
                        style="-fx-background-color: white; -fx-text-fill: #2980b9; -fx-font-weight: bold; -fx-font-size: 20; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 15, 0, 0, 0); -fx-cursor: hand; -fx-border-color: #2980b9; -fx-border-width: 0 0 8 0; -fx-border-radius: 15;"/>

                <Button text="SECUNDARIA" onAction="#handleSeleccionCategoria"
                        prefHeight="250.0" prefWidth="240.0"
                        style="-fx-background-color: white; -fx-text-fill: #8e44ad; -fx-font-weight: bold; -fx-font-size: 20; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 15, 0, 0, 0); -fx-cursor: hand; -fx-border-color: #8e44ad; -fx-border-width: 0 0 8 0; -fx-border-radius: 15;"/>

                <Button text="PREPARATORIA" onAction="#handleSeleccionCategoria"
                        prefHeight="250.0" prefWidth="240.0"
                        style="-fx-background-color: white; -fx-text-fill: #d35400; -fx-font-weight: bold; -fx-font-size: 20; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 15, 0, 0, 0); -fx-cursor: hand; -fx-border-color: #d35400; -fx-border-width: 0 0 8 0; -fx-border-radius: 15;"/>

                <Button text="UNIVERSIDAD" onAction="#handleSeleccionCategoria"
                        prefHeight="250.0" prefWidth="240.0"
                        style="-fx-background-color: white; -fx-text-fill: #c0392b; -fx-font-weight: bold; -fx-font-size: 20; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 15, 0, 0, 0); -fx-cursor: hand; -fx-border-color: #c0392b; -fx-border-width: 0 0 8 0; -fx-border-radius: 15;"/>

            </HBox>

        </VBox>
    </center>

</BorderPane>