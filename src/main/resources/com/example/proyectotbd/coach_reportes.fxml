<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.proyectotbd.CoachReportesController"
            prefHeight="720.0" prefWidth="1280.0"
            style="-fx-background-color: #f4f6f8;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Button text="← Volver al Menú"
                    onAction="#handleRegresar"
                    style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-font-size: 14; -fx-cursor: hand; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>

            <Label text="Resultados y Evaluaciones" textFill="WHITE">
                <font> <Font name="System Bold" size="24.0" /> </font>
                <HBox.margin> <Insets left="15.0" /> </HBox.margin>
            </Label>

            <Region HBox.hgrow="ALWAYS" />

            <Label text="Coach" textFill="#bdc3c7">
                <font> <Font size="16.0" /> </font>
            </Label>
        </HBox>
    </top>

    <center>
        <VBox spacing="20.0">
            <padding> <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" /> </padding>

            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <VBox>
                    <Label text="Mis Equipos" textFill="#2c3e50">
                        <font> <Font name="System Bold" size="28.0" /> </font>
                    </Label>
                    <Label text="Consulta el desglose de puntajes obtenidos en el torneo." textFill="#7f8c8d">
                        <font> <Font size="16.0" /> </font>
                    </Label>
                </VBox>
            </HBox>

            <TableView fx:id="tablaReportes" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;">
                <columns>
                    <TableColumn fx:id="colEquipo" text="EQUIPO" prefWidth="250.0" />
                    <TableColumn fx:id="colCategoria" text="CATEGORÍA" prefWidth="150.0" />
                    <TableColumn fx:id="colEvento" text="EVENTO" prefWidth="250.0" />

                    <TableColumn fx:id="colEvaluado" text="EVALUADO" prefWidth="100.0" style="-fx-alignment: CENTER; -fx-font-weight: bold;"/>

                    <TableColumn text="PUNTAJES POR ÁREA">
                        <columns>
                            <TableColumn fx:id="colDiseno" text="Diseño" prefWidth="100.0" style="-fx-alignment: CENTER;"/>
                            <TableColumn fx:id="colProg" text="Programación" prefWidth="120.0" style="-fx-alignment: CENTER;"/>
                            <TableColumn fx:id="colConst" text="Construcción" prefWidth="120.0" style="-fx-alignment: CENTER;"/>
                        </columns>
                    </TableColumn>

                    <TableColumn fx:id="colTotal" text="TOTAL" prefWidth="100.0" style="-fx-alignment: CENTER; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                </columns>
                <effect>
                    <DropShadow color="#0000001a" radius="10" offsetY="3" />
                </effect>
            </TableView>

        </VBox>
    </center>

</BorderPane>