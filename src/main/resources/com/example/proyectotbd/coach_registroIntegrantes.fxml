<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.proyectotbd.CoachRegistroIntegrantesController"
            prefHeight="720.0" prefWidth="1280.0"
            style="-fx-background-color: #f4f6f8;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Button text="← Volver a Datos"
                    onAction="#handleRegresar"
                    style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-font-size: 14; -fx-cursor: hand; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>

            <Label text="Registro de Participantes" textFill="WHITE">
                <font> <Font name="System Bold" size="24.0" /> </font>
                <HBox.margin> <Insets left="15.0" /> </HBox.margin>
            </Label>

            <Region HBox.hgrow="ALWAYS" />

            <Label text="Paso 4 de 4: Integrantes" textFill="#bdc3c7">
                <font> <Font size="14.0" /> </font>
            </Label>
        </HBox>
    </top>

    <center>
        <HBox spacing="30.0" alignment="CENTER">
            <padding> <Insets top="30.0" bottom="30.0" left="50.0" right="50.0"/> </padding>

            <VBox spacing="20.0" prefWidth="400.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;">
                <effect> <DropShadow color="#0000001a" radius="10" offsetY="3" /> </effect>

                <Label text="Nuevo Integrante" textFill="#e67e22">
                    <font> <Font name="System Bold" size="20.0" /> </font>
                </Label>
                <Label text="Añade hasta 5 estudiantes." textFill="#95a5a6"/>

                <VBox spacing="5.0">
                    <Label text="NOMBRE COMPLETO" textFill="#7f8c8d" style="-fx-font-weight:bold; -fx-font-size: 11;"/>
                    <TextField fx:id="txtNombre" promptText="Nombre del alumno" prefHeight="40.0" style="-fx-background-color: #f4f6f8; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
                </VBox>

                <VBox spacing="5.0">
                    <Label text="FECHA DE NACIMIENTO" textFill="#7f8c8d" style="-fx-font-weight:bold; -fx-font-size: 11;"/>
                    <DatePicker fx:id="dpNacimiento" promptText="Selecciona fecha" prefHeight="40.0" maxWidth="Infinity" style="-fx-background-color: #f4f6f8; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
                </VBox>

                <VBox spacing="5.0">
                    <Label text="SEXO" textFill="#7f8c8d" style="-fx-font-weight:bold; -fx-font-size: 11;"/>
                    <ComboBox fx:id="cbSexo" promptText="Selecciona..." prefHeight="40.0" maxWidth="Infinity" style="-fx-background-color: #f4f6f8; -fx-border-color: #bdc3c7; -fx-border-radius: 5;">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="H" />
                                <String fx:value="M" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                </VBox>

                <Button text="AGREGAR A LA LISTA" onAction="#handleAgregar"
                        prefHeight="45.0" maxWidth="Infinity"
                        style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 5;">
                    <VBox.margin> <Insets top="10.0" /> </VBox.margin>
                </Button>

                <Label fx:id="lblError" textFill="RED" visible="false" wrapText="true"/>
            </VBox>

            <VBox spacing="15.0" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;">
                <effect> <DropShadow color="#0000001a" radius="10" offsetY="3" /> </effect>

                <HBox alignment="CENTER_LEFT">
                    <Label text="Miembros del Equipo" textFill="#2c3e50">
                        <font> <Font name="System Bold" size="20.0" /> </font>
                    </Label>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="lblContador" text="0 / 5" textFill="#7f8c8d" style="-fx-font-weight: bold; -fx-font-size: 16;"/>
                </HBox>

                <ListView fx:id="listaParticipantes" VBox.vgrow="ALWAYS" style="-fx-background-color: #f4f6f8; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>

                <Label text="Verifica los datos antes de finalizar." textFill="#95a5a6" style="-fx-font-style: italic;"/>

                <Button text="FINALIZAR INSCRIPCIÓN" onAction="#handleFinalizar"
                        prefHeight="50.0" maxWidth="Infinity"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-cursor: hand; -fx-background-radius: 5;"/>
            </VBox>

        </HBox>
    </center>

</BorderPane>