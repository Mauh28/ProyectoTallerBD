<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.proyectotbd.JuezMenuController"
            prefHeight="720.0" prefWidth="1280.0"
            style="-fx-background-color: #f4f6f8;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 20;">

            <Label text="Panel del Juez" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>

            <Region HBox.hgrow="ALWAYS" />

            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Hola, Juez" textFill="#bdc3c7">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>

                <MenuButton text="Mi Cuenta"
                            style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-cursor: hand; -fx-font-size: 14;">
                    <items>
                        <MenuItem text="Cerrar sesión" onAction="#handleCerrarSesion"/>
                    </items>
                </MenuButton>
            </HBox>

        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="60.0">

            <Label text="¿Qué actividad realizarás hoy?" textFill="#7f8c8d">
                <font>
                    <Font size="28.0" />
                </font>
            </Label>

            <HBox alignment="CENTER" spacing="80.0">

                <Button fx:id="btnEvaluar"
                        text="EVALUAR PROYECTOS"
                        onAction="#handleIrAEvaluar"
                        wrapText="true"
                        prefHeight="280.0"
                        prefWidth="300.0"
                        style="-fx-background-color: white; -fx-text-fill: #27ae60; -fx-font-weight: bold; -fx-font-size: 22; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 15, 0, 0, 0); -fx-cursor: hand; -fx-border-color: #27ae60; -fx-border-width: 0 0 8 0; -fx-border-radius: 20;">
                </Button>

                <Button fx:id="btnReportes"
                        text="VER REPORTES DE EVALUACIÓN"
                        onAction="#handleIrAReportes"
                        wrapText="true"
                        prefHeight="280.0"
                        prefWidth="300.0"
                        style="-fx-background-color: white; -fx-text-fill: #8e44ad; -fx-font-weight: bold; -fx-font-size: 22; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 15, 0, 0, 0); -fx-cursor: hand; -fx-border-color: #8e44ad; -fx-border-width: 0 0 8 0; -fx-border-radius: 20;" />

            </HBox>

        </VBox>
    </center>

</BorderPane>