<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.proyectotbd.LoginController"
      prefHeight="720.0"
      prefWidth="1280.0">

    <VBox alignment="CENTER" prefWidth="550.0" style="-fx-background-color: #2c3e50;">
        <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
        </padding>

        <Label text="⚙" textFill="WHITE">
            <font>
                <Font size="100.0" />
            </font>
        </Label>

        <Label text="SISTEMA DE GESTIÓN VEX" textFill="WHITE" wrapText="true" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="32.0" />
            </font>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Label>

        <Label text="Eventos, Prototipos y Evaluaciones" textFill="#bdc3c7" textAlignment="CENTER" wrapText="true">
            <font>
                <Font size="18.0" />
            </font>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Label>
    </VBox>

    <VBox alignment="CENTER" HBox.hgrow="ALWAYS" style="-fx-background-color: white;">
        <padding>
            <Insets bottom="50.0" left="100.0" right="100.0" top="50.0" />
        </padding>

        <VBox maxWidth="400.0" spacing="25.0">

            <VBox spacing="5.0">
                <Label text="Bienvenido" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="36.0" />
                    </font>
                </Label>
                <Label text="Ingresa tus credenciales para continuar." textFill="#95a5a6">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
            </VBox>

            <VBox spacing="5.0">
                <Label text="USUARIO" textFill="#7f8c8d" style="-fx-font-weight:bold; -fx-font-size: 12;"/>
                <TextField fx:id="txtUsuario"
                           promptText="Nombre de usuario"
                           prefHeight="50.0"
                           style="-fx-background-color: #f4f6f8; -fx-border-color: transparent; -fx-font-size: 14px;" />
            </VBox>

            <VBox spacing="5.0">
                <Label text="CONTRASEÑA" textFill="#7f8c8d" style="-fx-font-weight:bold; -fx-font-size: 12;"/>
                <PasswordField fx:id="txtPassword"
                               promptText="••••••••"
                               prefHeight="50.0"
                               style="-fx-background-color: #f4f6f8; -fx-border-color: transparent; -fx-font-size: 14px;" />
            </VBox>

            <Label fx:id="lblError" textFill="#e74c3c" visible="false" wrapText="true"/>

            <Button fx:id="btnIngresar"
                    text="INICIAR SESIÓN"
                    onAction="#handleLogin"
                    prefHeight="55.0"
                    maxWidth="Infinity"
                    style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 5; -fx-cursor: hand;">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </Button>

            <VBox alignment="CENTER" spacing="15.0">
                <HBox alignment="CENTER" spacing="5.0">
                    <Label text="¿No tienes cuenta?" textFill="#95a5a6">
                        <font> <Font size="14.0" /> </font>
                    </Label>
                    <Hyperlink text="Regístrate aquí"
                               onAction="#handleGoToRegister"
                               textFill="#3498db"
                               style="-fx-font-weight: bold; -fx-font-size: 14; -fx-border-color: transparent; -fx-padding: 0;" />
                </HBox>

                <HBox alignment="CENTER" spacing="5.0">
                    <Label text="¿Eres Organizador?" textFill="#95a5a6">
                        <font> <Font size="14.0" /> </font>
                    </Label>
                    <Hyperlink text="Ingresa aquí"
                               onAction="#handleGoToAdminLogin"
                               textFill="#e67e22"
                               style="-fx-font-weight: bold; -fx-font-size: 14; -fx-border-color: transparent; -fx-padding: 0;" />
                </HBox>
            </VBox>

        </VBox>
    </VBox>
</HBox>