<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.proyectotbd.OrganizadorVerEventosController"
            prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #f4f6f8;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Button text="â† Volver" onAction="#handleRegresar"
                    style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
            <Label text="Directorio de Eventos" textFill="WHITE">
                <font> <Font name="System Bold" size="24.0" /> </font>
            </Label>
        </HBox>
    </top>

    <center>
        <VBox spacing="20.0" style="-fx-padding: 30;">
            <Label text="Eventos Registrados" textFill="#2c3e50">
                <font> <Font name="System Bold" size="20.0" /> </font>
            </Label>

            <TableView fx:id="tablaEventos" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50.0" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colNombre" text="NOMBRE DEL EVENTO" prefWidth="400.0" />
                    <TableColumn fx:id="colLugar" text="LUGAR / SEDE" prefWidth="300.0" />
                    <TableColumn fx:id="colFecha" text="FECHA" prefWidth="150.0" style="-fx-alignment: CENTER;"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <HBox alignment="CENTER_RIGHT">
                <Button text="ELIMINAR EVENTO SELECCIONADO" onAction="#handleEliminar"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 10 20; -fx-background-radius: 5;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>