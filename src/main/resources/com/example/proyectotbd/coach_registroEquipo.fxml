<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.proyectotbd.CoachRegistroEquipoController"
            prefHeight="720.0" prefWidth="1280.0"
            style="-fx-background-color: #f4f6f8;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Button text="← Volver al Menú" onAction="#handleRegresar"
                    style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-font-size: 14; -fx-cursor: hand; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
            <Label text="Registro de Nuevo Equipo" textFill="WHITE">
                <font> <Font name="System Bold" size="24.0" /> </font>
                <HBox.margin> <Insets left="15.0" /> </HBox.margin>
            </Label>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER">
            <VBox spacing="20.0" maxWidth="700.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 40;">
                <effect> <DropShadow color="#00000022" radius="15" offsetY="5" /> </effect>

                <VBox spacing="5.0">
                    <Label text="Datos de Inscripción" textFill="#e67e22">
                        <font> <Font name="System Bold" size="24.0" /> </font>
                    </Label>
                    <Label text="Completa la información para inscribir a tu equipo en el torneo." textFill="#95a5a6"/>
                </VBox>

                <Separator />

                <VBox spacing="5.0">
                    <Label text="1. SELECCIONA EL EVENTO" textFill="#7f8c8d" style="-fx-font-weight:bold; -fx-font-size: 12;"/>
                    <ComboBox fx:id="cbEventos" promptText="Elige un torneo disponible..." prefHeight="40.0" maxWidth="Infinity"
                              style="-fx-background-color: #f4f6f8; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-font-size: 14;"/>
                </VBox>

                <VBox spacing="10.0">
                    <Label text="2. SELECCIONA LA CATEGORÍA" textFill="#7f8c8d" style="-fx-font-weight:bold; -fx-font-size: 12;"/>

                    <HBox spacing="15.0" alignment="CENTER_LEFT">
                        <Button text="Primaria" onAction="#handleCategoria" prefWidth="150.0"
                                style="-fx-base: #f4f6f8; -fx-cursor: hand;"/>
                        <Button text="Secundaria" onAction="#handleCategoria" prefWidth="150.0"
                                style="-fx-base: #f4f6f8; -fx-cursor: hand;"/>
                        <Button text="Preparatoria" onAction="#handleCategoria" prefWidth="150.0"
                                style="-fx-base: #f4f6f8; -fx-cursor: hand;"/>
                        <Button text="Profesional" onAction="#handleCategoria" prefWidth="150.0"
                                style="-fx-base: #f4f6f8; -fx-cursor: hand;"/>
                    </HBox>

                    <Label fx:id="lblCategoriaSeleccionada" text="Ninguna seleccionada" textFill="#e67e22" style="-fx-font-style: italic; -fx-font-weight: bold;"/>
                </VBox>

                <HBox spacing="20.0">
                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                        <Label text="3. NOMBRE DEL EQUIPO" textFill="#7f8c8d" style="-fx-font-weight:bold; -fx-font-size: 12;"/>
                        <TextField fx:id="txtNombreEquipo" promptText="Ej: RobotiX Alpha" prefHeight="40.0" style="-fx-background-color: #f4f6f8; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
                    </VBox>

                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                        <Label text="INSTITUCIÓN" textFill="#7f8c8d" style="-fx-font-weight:bold; -fx-font-size: 12;"/>
                        <TextField fx:id="txtInstitucion" promptText="Ej: Tec de Monterrey" prefHeight="40.0" style="-fx-background-color: #f4f6f8; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
                    </VBox>
                </HBox>

                <Label fx:id="lblMensaje" visible="false" wrapText="true" style="-fx-font-weight: bold;"/>

                <Button text="REGISTRAR Y AÑADIR INTEGRANTES  →" onAction="#handleContinuar"
                        prefHeight="50.0" maxWidth="Infinity"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px; -fx-cursor: hand; -fx-background-radius: 5;">
                    <VBox.margin> <Insets top="10.0" /> </VBox.margin>
                </Button>

            </VBox>
        </VBox>
    </center>
</BorderPane>