<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.proyectotbd.OrganizadorCrearEvento"
            prefHeight="720.0" prefWidth="1280.0"
            style="-fx-background-color: #f4f6f8;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Button text="← Regresar al Menú"
                    onAction="#handleRegresar"
                    style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-font-size: 14; -fx-cursor: hand; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>

            <Label text="Gestión de Eventos" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
                <HBox.margin>
                    <Insets left="15.0" />
                </HBox.margin>
            </Label>

            <Region HBox.hgrow="ALWAYS" />

            <Label text="Administrador" textFill="#bdc3c7">
                <font> <Font size="16.0" /> </font>
            </Label>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER">

            <VBox spacing="20.0" maxWidth="500.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 40;">
                <effect>
                    <DropShadow color="#00000022" radius="15" offsetY="5" />
                </effect>

                <VBox spacing="5.0" alignment="CENTER_LEFT">
                    <Label text="Crear Nuevo Evento" textFill="#27ae60">
                        <font>
                            <Font name="System Bold" size="24.0" />
                        </font>
                    </Label>
                    <Label text="Ingresa los detalles logísticos del torneo o feria." textFill="#95a5a6"/>
                </VBox>

                <VBox spacing="5.0">
                    <Label text="NOMBRE DEL EVENTO" textFill="#7f8c8d" style="-fx-font-weight:bold; -fx-font-size: 12;"/>
                    <TextField fx:id="txtNombreEvento"
                               promptText="Ej: Torneo Nacional VEX 2025"
                               prefHeight="45.0"
                               style="-fx-background-color: #f4f6f8; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
                </VBox>

                <VBox spacing="5.0">
                    <Label text="LUGAR / SEDE" textFill="#7f8c8d" style="-fx-font-weight:bold; -fx-font-size: 12;"/>
                    <TextField fx:id="txtLugar"
                               promptText="Ej: Centro de Convenciones"
                               prefHeight="45.0"
                               style="-fx-background-color: #f4f6f8; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
                </VBox>

                <VBox spacing="5.0">
                    <Label text="FECHA DE REALIZACIÓN" textFill="#7f8c8d" style="-fx-font-weight:bold; -fx-font-size: 12;"/>
                    <DatePicker fx:id="dpFecha"
                                promptText="Selecciona el día"
                                prefHeight="45.0"
                                maxWidth="Infinity"
                                style="-fx-font-size: 14px; -fx-background-color: #f4f6f8; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
                </VBox>

                <Label fx:id="lblMensaje" visible="false" style="-fx-font-weight: bold;"/>

                <Button text="GUARDAR EVENTO"
                        onAction="#handleGuardarEvento"
                        prefHeight="50.0"
                        maxWidth="Infinity"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 5; -fx-cursor: hand;">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>

            </VBox>
        </VBox>
    </center>

</BorderPane>