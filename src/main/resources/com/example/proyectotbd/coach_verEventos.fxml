<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.proyectotbd.CoachVerEventosController"
            prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #f4f6f8;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #3498db; -fx-padding: 20;">
            <Button text="← Volver al Menú" onAction="#handleRegresar"
                    style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 5; -fx-border-color: #ecf0f1; -fx-border-radius: 5;"/>
            <Label text="Registro de Equipos y Eventos" textFill="WHITE">
                <font> <Font name="System Bold" size="24.0" /> </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="lblCoachNombre" text="Coach: Nombre" textFill="#ecf0f1"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="20.0" style="-fx-padding: 30;">
            <Label text="Eventos Disponibles para Inscripción" textFill="#2c3e50">
                <font> <Font name="System Bold" size="20.0" /> </font>
            </Label>

            <Label text="Selecciona un evento FUTURO para inscribir a tu equipo." textFill="#7f8c8d"/>

            <TableView fx:id="tablaEventos" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50.0" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colNombre" text="NOMBRE DEL EVENTO" prefWidth="350.0" />
                    <TableColumn fx:id="colLugar" text="LUGAR / SEDE" prefWidth="250.0" />
                    <TableColumn fx:id="colFecha" text="FECHA" prefWidth="120.0" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colHoraInicio" text="INICIO" prefWidth="100.0" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colHoraFin" text="FIN" prefWidth="100.0" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colEstado" text="ESTADO" prefWidth="150.0" style="-fx-alignment: CENTER;"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="15.0">
                <Label fx:id="lblMensaje" textFill="#e74c3c" />
                <Button text="✏️ INSCRIBIR EQUIPO AL EVENTO SELECCIONADO" onAction="#handleInscribirEquipo"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 10 20; -fx-background-radius: 5;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>