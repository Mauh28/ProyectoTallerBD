<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.proyectotbd.OrganizadorSelecEventoController"
            prefHeight="720.0" prefWidth="1280.0"
            style="-fx-background-color: #f4f6f8;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Button text="← Volver al Menú"
                    onAction="#handleRegresar"
                    style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-font-size: 14; -fx-cursor: hand; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>

            <Label text="Gestión de Eventos" textFill="WHITE">
                <font> <Font name="System Bold" size="24.0" /> </font>
                <HBox.margin> <Insets left="15.0" /> </HBox.margin>
            </Label>
        </HBox>
    </top>

    <center>
        <VBox spacing="20.0">
            <padding> <Insets bottom="40.0" left="60.0" right="60.0" top="40.0" /> </padding>

            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <VBox>
                    <Label text="Selecciona un Evento" textFill="#2c3e50">
                        <font> <Font name="System Bold" size="28.0" /> </font>
                    </Label>
                    <Label text="Elige el evento para asignar jueces y categorías" textFill="#7f8c8d">
                        <font> <Font size="16.0" /> </font>
                    </Label>
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <TextField promptText="Buscar evento..." prefHeight="40.0" prefWidth="300.0" style="-fx-background-radius: 20; -fx-border-color: #bdc3c7; -fx-border-radius: 20; -fx-padding: 0 15;"/>
            </HBox>

            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
                <content>
                    <VBox spacing="15.0" style="-fx-padding: 5;">
                        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
                            <effect> <DropShadow color="#0000001a" radius="5" offsetY="2" /> </effect>

                            <Label text="Torneo Nacional VEX 2025" textFill="#2c3e50" prefWidth="400.0" wrapText="true">
                                <font> <Font name="System Bold" size="18.0" /> </font>
                            </Label>
                            <Label text="Centro de Convenciones" textFill="#7f8c8d" prefWidth="250.0"/>
                            <Label text="2025-11-20" textFill="#2980b9" prefWidth="150.0" style="-fx-font-weight: bold;"/>
                            <Region HBox.hgrow="ALWAYS" />

                            <Button text="GESTIONAR" onAction="#handleGestionarEvento"
                                    style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 5; -fx-padding: 10 25;"/>
                        </HBox>
                    </VBox>
                </content>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>