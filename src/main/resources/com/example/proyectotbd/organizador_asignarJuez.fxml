<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.proyectotbd.OrganizadorAsignarJuezController"
            prefHeight="720.0" prefWidth="1280.0"
            style="-fx-background-color: #f4f6f8;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Button text="← Volver a Categorías" onAction="#handleRegresar"
                    style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-font-size: 14; -fx-cursor: hand; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
            <Label text="Asignación de Jueces" textFill="WHITE">
                <font> <Font name="System Bold" size="24.0" /> </font>
                <HBox.margin> <Insets left="15.0" /> </HBox.margin>
            </Label>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER">
            <VBox spacing="20.0" maxWidth="600.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 50;">
                <effect> <DropShadow color="#00000022" radius="15" offsetY="5" /> </effect>

                <Label text="Configuración de Evaluación" textFill="#d35400">
                    <font> <Font name="System Bold" size="24.0" /> </font>
                </Label>
                <Label text="Selecciona al juez responsable para esta categoría y evento." textFill="#95a5a6"/>

                <VBox spacing="5.0" style="-fx-background-color: #fdf2e9; -fx-padding: 15; -fx-background-radius: 5;">
                    <Label text="RESUMEN" textFill="#d35400" style="-fx-font-weight: bold;"/>
                    <Label text="Evento: Torneo Nacional VEX 2025" textFill="#2c3e50"/>
                    <Label text="Categoría: Preparatoria" textFill="#2c3e50"/>
                </VBox>

                <VBox spacing="5.0">
                    <Label text="SELECCIONAR JUEZ" textFill="#7f8c8d" style="-fx-font-weight:bold; -fx-font-size: 12;"/>
                    <ComboBox fx:id="cbJueces" promptText="Selecciona un juez..." prefHeight="45.0" maxWidth="Infinity" style="-fx-background-color: #f4f6f8; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-font-size: 14;">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Juez 1 - Ana Torres" />
                                <String fx:value="Juez 2 - Carlos Ruiz" />
                                <String fx:value="Juez 3 - Roberto Gómez" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                </VBox>

                <Button text="CONFIRMAR ASIGNACIÓN" onAction="#handleGuardar"
                        prefHeight="50.0" maxWidth="Infinity"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 5; -fx-cursor: hand;">
                    <VBox.margin> <Insets top="20.0" /> </VBox.margin>
                </Button>
            </VBox>
        </VBox>
    </center>
</BorderPane>