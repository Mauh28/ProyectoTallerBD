<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.proyectotbd.CoachMisEquiposController"
            prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #f4f6f8;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Button text="← Volver al Menú" onAction="#handleRegresar"
                    style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 5;"/>
            <Label text="Mis Equipos Registrados" textFill="WHITE">
                <font> <Font name="System Bold" size="24.0" /> </font>
            </Label>
        </HBox>
    </top>

    <center>
        <VBox spacing="20.0" style="-fx-padding: 40;">
            <TableView fx:id="tablaEquipos" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 5;">
                <columns>
                    <TableColumn fx:id="colNombre" text="NOMBRE DEL EQUIPO" prefWidth="300.0"/>
                    <TableColumn fx:id="colInstitucion" text="INSTITUCIÓN" prefWidth="300.0"/>
                    <TableColumn fx:id="colCategoria" text="CATEGORÍA" prefWidth="200.0"/>
                    <TableColumn fx:id="colEvento" text="EVENTO INSCRITO" prefWidth="300.0"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>